{
  "compilerOptions": {
    "target": "ES6",
    "module": "CommonJS",
    "strict": true,
    "removeComments": true,
    "noEmitOnError": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "skipLibCheck": true,
    "rootDir": ".",
    "outDir": "dist",
    "baseUrl": ".",
    "paths": { "@types/*": ["@types/*"] },
    "typeRoots": ["./@types", "./node_modules/@types"]
  },
  "include": ["src", "prisma", "@types"],
  "exclude": ["node_modules", "dist"]
}
